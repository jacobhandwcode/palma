---
import { getLocalizedUrl } from '../i18n/utils';

interface Props {
  currentLang?: 'en' | 'es' | 'pt';
  currentPath?: string;
}

const { currentLang = 'en', currentPath = '' } = Astro.props;

const languages = [
  { code: 'en', label: 'EN', url: getLocalizedUrl('en', currentPath) },
  { code: 'es', label: 'ES', url: getLocalizedUrl('es', currentPath) },
  { code: 'pt', label: 'PT', url: getLocalizedUrl('pt', currentPath) },
];

const currentLanguage = languages.find((lang) => lang.code === currentLang);
const otherLanguages = languages.filter((lang) => lang.code !== currentLang);
---

<div class="language-switcher">
  <div class="current-language">
    <span>{currentLanguage?.label}</span>
  </div>
  <div class="language-dropdown">
    {
      otherLanguages.map((lang) => (
        <a href={lang.url} class="language-option">
          {lang.label}
        </a>
      ))
    }
  </div>
</div>

<style>
  .language-switcher {
    position: relative;
    display: inline-block;
    font-family: inherit;
  }

  .current-language {
    color: white;
    background-color: transparent;
    padding: 8px 12px;
    cursor: pointer;
    user-select: none;
    font-weight: 500;
    letter-spacing: 0.5px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-width: 60px;
    box-sizing: border-box;
    width: 60px;
    text-align: center;
  }

  .language-dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    min-width: 60px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
    z-index: 1000;
    backdrop-filter: blur(10px);
  }

  .language-switcher:hover .language-dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .language-option {
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-decoration: none;
    padding: 8px 12px;
    font-weight: 500;
    letter-spacing: 0.5px;
    transition: background-color 0.2s ease;
    text-align: center;
    min-width: 60px;
    box-sizing: border-box;
    background: #a8a19529;
  }

  .language-option:hover {
    background-color: rgba(255, 255, 255, 0.3);
  }

  .language-option:last-child {
    border-radius: 0 0 8px 8px;
  }

  .language-switcher:focus-within .language-dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .current-language:focus {
    outline: 2px solid rgba(255, 255, 255, 0.5);
    outline-offset: 2px;
  }

  .language-option:focus {
    background-color: rgba(255, 255, 255, 0.2);
    outline: none;
  }
</style>
