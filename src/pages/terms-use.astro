---
import Layout from '../layouts/Layout.astro';
import { useTranslations } from '../i18n/utils';

const lang = 'en';
const t = useTranslations(lang);
---

<Layout
  title={t('legal.meta.title')}
  description={t('legal.meta.description')}
  lang={lang}
>
  <main>
    <section class="legal-section">
      <div class="legal-container">
        <header class="legal-header">
          <h1 class="legal-title">{t('legal.title')}</h1>
          <p class="legal-subtitle">{t('legal.subtitle')}</p>
        </header>

        <div class="legal-content">
          <p>
            <strong>{t('legal.acceptance')}</strong>
          </p>

          <p>{t('legal.description')}</p>

          <p><strong>{t('legal.noAgreement')}</strong></p>

          <p>{t('legal.release')}</p>

          <p>{t('legal.communications.description')}</p>

          <div class="equal-housing-section">
            <img
              src="/images/equal-housing.png"
              alt="Equal Housing Opportunity"
              class="equal-housing-logo"
            />
            <p>{t('legal.equalHousing')}</p>
          </div>

          <p>{t('legal.conceptual')}</p>

          <p>{t('legal.press.disclaimer')}</p>

          <p>
            <strong>{t('legal.dispute.title')}:</strong>
            {t('legal.dispute.description')}
          </p>

          <p>{t('legal.materials.service')}</p>

          <p>{t('legal.pricing.disclaimer')}</p>

          <p>{t('legal.plans.disclaimer')}</p>

          <p>{t('legal.photos.disclaimer')}</p>

          <p>{t('legal.interior.disclaimer')}</p>

          <p>{t('legal.wood.disclaimer')}</p>

          <p>{t('legal.ceiling.disclaimer')}</p>

          <p>{t('legal.offsite.disclaimer')}</p>

          <h2>{t('legal.additional.title')}</h2>

          <h3>{t('legal.updates.title')}</h3>
          <p>{t('legal.updates.description')}</p>

          <h3>{t('legal.privacy.title')}</h3>
          <p>{t('legal.privacy.description')}</p>

          <h3>{t('legal.yourUse.title')}</h3>
          <p>{t('legal.yourUse.description')}</p>
          <ul>
            <li>{t('legal.yourUse.impersonate')}</li>
            <li>{t('legal.yourUse.illegal')}</li>
            <li>{t('legal.yourUse.link')}</li>
            <li>{t('legal.yourUse.interfere')}</li>
            <li>{t('legal.yourUse.frame')}</li>
            <li>{t('legal.yourUse.spider')}</li>
            <li>{t('legal.yourUse.remove')}</li>
            <li>{t('legal.yourUse.decompile')}</li>
            <li>{t('legal.yourUse.virus')}</li>
            <li>{t('legal.yourUse.circumvent')}</li>
            <li>{t('legal.yourUse.inappropriate')}</li>
            <li>{t('legal.yourUse.corrupted')}</li>
            <li>{t('legal.yourUse.software')}</li>
            <li>{t('legal.yourUse.laws')}</li>
          </ul>
          <p>{t('legal.yourUse.monitoring')}</p>
          <p>{t('legal.yourUse.limitations')}</p>

          <h3>{t('legal.intellectual.title')}</h3>
          <p>{t('legal.intellectual.description')}</p>

          <h3>{t('legal.management.title')}</h3>
          <h4>{t('legal.management.right.title')}</h4>
          <p>{t('legal.management.right.description')}</p>
          <h4>{t('legal.management.terminate.title')}</h4>
          <p>{t('legal.management.terminate.description')}</p>

          <h3>{t('legal.thirdParty.title')}</h3>
          <p>{t('legal.thirdParty.description')}</p>

          <h3>{t('legal.arbitration.title')}</h3>
          <p><strong><u>{t('legal.arbitration.read')}</u></strong></p>

          <h4>{t('legal.arbitration.initial.title')}</h4>
          <p>{t('legal.arbitration.initial.description')}</p>

          <h4>{t('legal.arbitration.binding.title')}</h4>
          <p>{t('legal.arbitration.binding.description')}</p>

          <h4>{t('legal.arbitration.class.title')}</h4>
          <p>{t('legal.arbitration.class.description')}</p>

          <h4>{t('legal.arbitration.exception.title')}</h4>
          <p>{t('legal.arbitration.exception.description')}</p>

          <h4><strong>{t('legal.arbitration.optout.title')}</strong></h4>
          <p>{t('legal.arbitration.optout.description')}</p>

          <h4>{t('legal.arbitration.venue.title')}</h4>
          <p>{t('legal.arbitration.venue.description')}</p>

          <h4>{t('legal.arbitration.law.title')}</h4>
          <p>{t('legal.arbitration.law.description')}</p>

          <h3>{t('legal.warranty.title')}</h3>
          <h4>{t('legal.warranty.general.title')}</h4>
          <p>{t('legal.warranty.general.materials')}</p>
          <p>{t('legal.warranty.general.accuracy')}</p>

          <h4>{t('legal.warranty.limited.title')}</h4>
          <p>{t('legal.warranty.limited.description')}</p>

          <h4>{t('legal.warranty.exceptions.title')}</h4>
          <p>{t('legal.warranty.exceptions.description')}</p>

          <h3>{t('legal.indemnity.title')}</h3>
          <p>{t('legal.indemnity.description')}</p>

          <h3>{t('legal.information.title')}</h3>
          <p>{t('legal.information.description')}</p>

          <h3>{t('legal.nonWaiver.title')}</h3>
          <p>{t('legal.nonWaiver.description')}</p>

          <h3>{t('legal.severability.title')}</h3>
          <p>{t('legal.severability.description')}</p>

          <h3>{t('legal.assignment.title')}</h3>
          <p>{t('legal.assignment.description')}</p>

          <h3>{t('legal.modifications.title')}</h3>
          <p>{t('legal.modifications.description')}</p>

          <h3>{t('legal.reporting.title')}</h3>
          <p>{t('legal.reporting.description')}</p>

          <h3>{t('legal.questions.title')}</h3>
          <p>{t('legal.questions.description')}</p>

          <h3>{t('legal.entire.title')}</h3>
          <p>{t('legal.entire.description')}</p>

          <h3>{t('legal.sms.title')}</h3>
          <p>{t('legal.sms.description')}</p>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .legal-section {
    margin: 12rem auto 3rem auto;
    max-width: 800px;
    width: 90%;
    padding: 0 20px;
  }

  .legal-container {
    margin: 0 auto;
  }

  .legal-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .legal-title {
    font-size: 48px;
    text-transform: uppercase;
    font-weight: 400;
    color: #7b705e;
    margin: 0 0 1rem 0;
    font-family: 'didot-headline', serif;
    line-height: 1.1;
  }

  .legal-subtitle {
    font-size: 18px;
    color: #7b705e;
    margin: 0;
    font-family: 'Montserrat', sans-serif;
    font-weight: 400;
  }

  .legal-content {
    color: #7b705e;
  }

  .legal-content h2 {
    font-size: 28px;
    font-weight: 400;
    color: #7b705e;
    margin: 2rem 0 1rem 0;
    font-family: 'didot-headline', serif;
  }

  .legal-content h3 {
    font-size: 22px;
    font-weight: 400;
    color: #7b705e;
    margin: 1.5rem 0 1rem 0;
    font-family: 'didot-headline', serif;
  }

  .legal-content h4 {
    font-size: 20px;
    font-weight: 400;
    color: #7b705e;
    margin: 1.5rem 0 1rem 0;
    font-family: 'didot-headline', serif;
  }

  .legal-content p {
    font-size: 16px;
    line-height: 1.6;
    margin-bottom: 1rem;
    font-family: 'Montserrat', sans-serif;
    font-weight: 300;
  }

  .legal-content ul,
  .legal-content ol {
    margin: 1rem 0;
    padding-left: 2rem;
  }

  .legal-content li {
    font-size: 16px;
    line-height: 1.6;
    margin-bottom: 0.5rem;
    font-family: 'Montserrat', sans-serif;
    font-weight: 300;
  }

  .legal-content a {
    color: #7b705e;
    text-decoration: underline;
  }

  .legal-content a:hover {
    color: #5a4e42;
  }

  .equal-housing-section {
    display: flex;
    align-items: flex-start;
    gap: 20px;
    margin: 2rem 0;
    padding: 1.5rem;
    background-color: #f9f8f6;
    border-radius: 8px;
  }

  .equal-housing-logo {
    width: 80px;
    height: auto;
    flex-shrink: 0;
  }

  .equal-housing-section p {
    margin: 0;
    flex: 1;
  }

  @media (max-width: 768px) {
    .legal-section {
      margin: 8rem auto 3rem auto;
      padding: 0 16px;
    }

    .legal-header {
      margin-bottom: 60px;
    }

    .legal-title {
      font-size: 36px;
    }

    .legal-subtitle {
      font-size: 16px;
    }

    .legal-content h2 {
      font-size: 24px;
    }

    .legal-content h3 {
      font-size: 20px;
    }

    .legal-content h4 {
      font-size: 18px;
    }

    .legal-content p,
    .legal-content li {
      font-size: 15px;
    }

    .equal-housing-section {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 15px;
    }

    .equal-housing-logo {
      width: 60px;
    }
  }

  @media (max-width: 480px) {
    .legal-title {
      font-size: 28px;
    }

    .legal-subtitle {
      font-size: 14px;
    }

    .legal-content h2 {
      font-size: 22px;
    }

    .legal-content h3 {
      font-size: 18px;
    }

    .legal-content h4 {
      font-size: 16px;
    }

    .legal-content p,
    .legal-content li {
      font-size: 14px;
    }

    .equal-housing-logo {
      width: 50px;
    }
  }
</style>
